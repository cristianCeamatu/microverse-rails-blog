<h1 class="page-title">All articles page</h1>
<% @articles.each do |article| %>
  <div class="article my-3 pb-3 border-bottom">
    <h3><%= link_to article.title, article_path(article), class: 'article-title', id: "article_#{article.id}" %></h3>
    <p class="article-body"><%= article.body %></p>
  </div>
<% end %>
